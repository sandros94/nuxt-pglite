{
  "name": "nuxt-pglite",
  "version": "0.3.2",
  "description": "A Nuxt module aimed to simplify the use of PGlite.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sandros94/nuxt-pglite.git"
  },
  "license": "MIT",
  "type": "module",
  "author": {
    "name": "Sandro Circi",
    "email": "sandro.circi@digitoolmedia.com"
  },
  "keywords": [
    "database",
    "electric-sql",
    "nuxt",
    "nuxt-module",
    "nuxt-pglite",
    "pglite",
    "postgresql",
    "typescript",
    "wasm"
  ],
  "engines": {
    "node": "22"
  },
  "packageManager": "pnpm@10.26.2",
  "build": {
    "externals": [
      "defu",
      "hookable"
    ]
  },
  "exports": {
    ".": {
      "types": "./dist/module.d.mts",
      "import": "./dist/module.mjs"
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/module.d.mts"
      ]
    }
  },
  "main": "./dist/module.mjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "nuxt-module-build build",
    "prepack": "pnpm build",
    "dev": "nuxt dev playground",
    "dev:build": "nuxt build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxt prepare playground && nuxt prepare docs",
    "docs": "nuxt dev docs",
    "docs:build": "nuxt build docs",
    "docs:preview": "nuxt preview",
    "release": "pnpm lint && pnpm test:types && pnpm prepack && changelogen --release --push",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "pnpm lint && pnpm test:types && vitest run",
    "test:watch": "vitest watch",
    "test:types": "vue-tsc --noEmit && nuxt typecheck playground",
    "db:push": "cd playground && drizzle-kit push --config=./drizzle.config.ts",
    "db:generate": "cd playground && drizzle-kit generate --config=./drizzle.config.ts",
    "db:migrate": "cd playground && drizzle-kit migrate --config=./drizzle.config.ts",
    "db:studio": "cd playground && drizzle-kit studio --config=./drizzle.config.ts"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.14",
    "@electric-sql/pglite-sync": "^0.4.0",
    "@nuxt/kit": "^4.2.2",
    "@nuxt/schema": "^4.2.2",
    "db0": "^0.3.4"
  },
  "devDependencies": {
    "@nuxt/devtools": "^3.1.1",
    "@nuxt/eslint-config": "^1.12.1",
    "@nuxt/module-builder": "^1.0.2",
    "@nuxt/test-utils": "^3.21.0",
    "@types/node": "^22.16.0",
    "changelogen": "^0.6.2",
    "eslint": "^9.39.1",
    "nuxt": "catalog:",
    "typescript": "^5.9.3",
    "valibot": "1.2.0",
    "vitest": "^4.0.15",
    "vue-tsc": "^3.1.8"
  },
  "resolutions": {
    "nuxt-pglite": "workspace:*",
    "brace-expansion": "^2.0.2",
    "dompurify": "^3.2.4",
    "glob": "^10.5.0",
    "js-yaml": "^4.1.1",
    "node-forge": "^1.3.2"
  }
}
